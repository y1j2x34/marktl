{
    "compilerOptions": {
      "module": "commonjs",
      "moduleResolution": "node",
      "target": "es5",
      "lib": ["dom", "es5", "es6", "esnext", "scripthost", "es2015.promise"],
      "strict": true,
      "noImplicitAny": false,
      "noUnusedLocals": true,
      "alwaysStrict": true,
      "preserveConstEnums": true,
      "removeComments": false,
      "sourceMap": true,
      "declaration": true,
      "importHelpers": true,
      "listFiles": true,
      "typeRoots": ["src/typings"],
      "forceConsistentCasingInFileNames": true,
      "esModuleInterop": true
    },
    "include": ["src"]
  }
