{
  "name": "marktl",
  "version": "1.0.0",
  "description": "javascript template engine",
  "main": "dist/index.js",
  "scripts": {
      "lint": "tslint {src,test}/**/*.ts",
      "format": "tslint {src,test}/**/*.ts --fix",
      "precommit": "lint-staged",
      "commitmsg": "commitlint -E HUSKY_GIT_PARAMS",
      "gendoc": "typedoc ./src  --target es5 --out dist/docs --name rmi.js --hideGenerator"
  },
  "lint-staged": {
      "{src,test}/**/*.ts": [
          "npm run format",
          "git add"
      ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/y1j2x34/marktl.git"
  },
  "keywords": [
    "template",
    "js",
    "fast",
    "javascript"
  ],
  "author": "'y1j2x34' <y1j2x34@qq.com> (http://www.vgerbot.com/)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/y1j2x34/marktl/issues"
  },
  "homepage": "https://github.com/y1j2x34/marktl#readme",
  "devDependencies": {
    "commitlint": "^7.3.1",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.0",
    "prettier": "^1.15.3",
    "rollup": "^1.1.0",
    "rollup-plugin-commonjs": "^9.2.0",
    "rollup-plugin-node-resolve": "^4.0.0",
    "rollup-plugin-strip": "^1.2.1",
    "rollup-plugin-typescript2": "^0.18.1",
    "rollup-plugin-uglify": "^6.0.1",
    "tslib": "^1.9.3",
    "tslint": "^5.12.1",
    "tslint-config-prettier": "^1.17.0",
    "tslint-plugin-prettier": "^2.0.1",
    "typedoc": "^0.14.1",
    "typescript": "^3.2.2"
  }
}
